<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Teacher_MSIT.teacherassistant">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/teachers"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ResetPasswordActivity"
            android:label="Smart-Mark"
            android:parentActivityName=".LoginActivity" />
        <!-- <activity android:name=".activity.Guest_Login"> -->


        <!-- </activity> -->
        <activity
            android:name=".activity.Student_list"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AboutUsActivity"
            android:label="@string/activity_title_about_us"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".FragmentProfile"
            android:label="Profile"
            android:parentActivityName=".activity.MainActivity" />
        <!-- <activity -->
        <!-- android:name=".AppBase" -->
        <!-- android:label="@string/app_name"></activity> -->
        <activity
            android:name=".MSIT_website"
            android:label="MSIT College"
            android:parentActivityName=".activity.MainActivity"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Moodle_Website"
            android:label="MSIT College"
            android:parentActivityName=".activity.MainActivity"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".profile_activity"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".Student_Registartion"
            android:parentActivityName=".profile_activity" />
        <activity
            android:name=".noteCreate"
            android:parentActivityName=".noteActivity" />
        <activity
            android:name=".attendanceActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".noteActivity"
            android:parentActivityName=".activity.MainActivity"
            android:label="NOTES"/>
        <activity
            android:name=".scheduler"
            android:parentActivityName=".activity.MainActivity"
            android:label="SCHEDULER"/>
        <activity
            android:name=".make_schedule"
            android:parentActivityName=".scheduler" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".Edit_Student"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".MSIIT_browser"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MoodleBrowser"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MapsActivity"
            android:label="Find Us"
            android:theme="@style/AppTheme"
            android:parentActivityName=".activity.MainActivity">

        </activity>
    </application>

</manifest>